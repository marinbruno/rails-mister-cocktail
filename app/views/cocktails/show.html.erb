<div class="container col-sm-4 offset-4"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
    url('<%= cl_image_path @cocktail.photo(:bright_face), height: 300, width: 400, crop: :fill %>')">
  <h1><%= @cocktail.name %></h1>
  <h2>Ingredients:</h2>
  <div id="ingredients-list" class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> (<%= link_to "delete", dose_path(dose), method: :delete %>)</li>
    <% end %>
  </div>
  <%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class:"badge badge-primary" %>

  <%= link_to "Back to cocktails menu", cocktails_path, class:"badge badge-secondary" %>
</div>
